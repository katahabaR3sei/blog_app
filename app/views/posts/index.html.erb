<h2>
<%= link_to "記事の投稿", new_post_path, class:"header-menu" %>
肩幅ブログ
</h2>
<ul>
  <% @posts.each do |post| %>
    <li>
     <%= link_to post.title, post_path(post) %>
     <%= link_to "[編集]", edit_post_path(post), class:"command" %>
     <%= link_to "[削除]", post_path(post), method: :delete, class:"command",data: { confirm: "本当に消しちゃうの？"} %>
    </li>
  <% end %>
</ul>